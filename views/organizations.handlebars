<div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 p-2 min-w-screen">
  {{#each organizations}}
    <div class="flex flex-col items-center content-center rounded-xl bg-zinc-200 p-2">
      <h2><a class="text-violet-800 pt-2 text-3xl" href="{{this.dataValues.website}}">{{this.dataValues.title}}</a></h2>
      <p class="text-center pt-2">Goal: <strong class="font-bold">{{this.dataValues.funding_goal}}</strong></p>
      <p class="text-left pt-4 pb-2">{{this.dataValues.description}}</p>
    </div>
  {{/each}}
</div>
